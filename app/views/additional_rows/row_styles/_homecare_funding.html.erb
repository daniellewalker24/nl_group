<section class="homecare-funding" id="<%= additional_row_presenter.anchor %>">
  <%= render partial: "additional_rows/additional_block",
             collection: BaseCollectionPresenter.new(
              collection: additional_row_presenter.additional_blocks.select{|x| x.position == 1 },
              view_template: self,
              presenter: AdditionalBlockPresenter
             ),
             as: :additional_block_presenter,
             locals: {
              additional_row_presenter: additional_row_presenter
             } %>

  <div class="row">
    <div class="small-12 columns text-center">
      <div class="homecare-funding-modals">
        <%= render partial: "additional_rows/additional_block",
                  collection: BaseCollectionPresenter.new(
                   collection: additional_row_presenter.additional_blocks.select{|x| x.style == 'homecare_funding_button_popup' },
                   view_template: self,
                   presenter: AdditionalBlockPresenter
                  ),
                  as: :additional_block_presenter,
                  locals: {
                   additional_row_presenter: additional_row_presenter
                  } %>
      </div>
    </div>
  </div>

  <%= render partial: "additional_rows/additional_block",
             collection: BaseCollectionPresenter.new(
              collection: additional_row_presenter.additional_blocks.reject{|x| x.position == 1 || x.style == 'homecare_funding_button_popup'},
              view_template: self,
              presenter: AdditionalBlockPresenter
             ),
             as: :additional_block_presenter,
             locals: {
              additional_row_presenter: additional_row_presenter
             } %>
</section>
