<%= content_for :footer do %>
  <!-- TODO -->
  <script>
    $(document).ready(function() {
      var truncateLength;

      $('.homecare-value-content p').each(function() {
        var thisLength = $(this).text().length;
        if(truncateLength > thisLength || truncateLength === undefined) {
          truncateLength = $(this).text().length;
        }
      });
    });
  </script>
<% end %>

