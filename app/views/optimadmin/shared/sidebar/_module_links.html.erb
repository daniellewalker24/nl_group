<div class="content-categories-sidebar">
  <div class="row collapse">
    <div class="small-8 show-for-medium-down columns">
      <%= link_to octicon('book') + 'Manage Content',
          '#',
          class: 'content-categories-toggle toggle-class',
          data: {
            class: 'content-categories-toggle-visiblity',
            container: '.content-categories, .content-categories-toggle',
            return: 'true'
          } %>
    </div>
    <div class="small-4 show-for-medium-down columns">
      <%= link_to logout_path, class: 'logout-link' do %>
        <%= octicon('sign-in') %> Logout
      <% end %>
    </div>
  </div>

  <div class="row collapse">
    <div class="large-12 small-8 left content-categories columns">
      <div class="content-category-type">
        Manage Your Content
      </div>

      <ul id="modules" class="content-category-list">
<%#= module_link(model: Additional Paragraph, path: additional_paragraphs_path) %>
<%#= module_link(model: Additional Button, path: additional_buttons_path) %>
<%#= module_link(model: Additional Title, path: additional_titles_path) %>
<%= module_link(content: "Additional Content", model: AdditionalRow, path: additional_rows_path) %>
<%= module_link(model: Resource, path: resources_path) %>
        <%= module_link(model: FrequentlyAskedQuestion, path: frequently_asked_questions_path, content: "FAQs") %>
        <%= module_link(model: Testimonial, path: testimonials_path) %>
        <%= module_link(model: TeamMember, path: team_members_path, content: "Team Members") %>
        <%= module_link(model: Client, path: clients_path) %>
        <% if can? :manage, Optimadmin::MenuItem %>
          <li><%= link_to 'Site Navigation', menu_items_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
