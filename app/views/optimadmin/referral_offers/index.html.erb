<%= render 'optimadmin/shared/header/main_title', title: 'Manage Referral Offers' %>

<div class="main-content">
  <div class="row module-header collapse">
    <%= render 'optimadmin/shared/module/index/new_item', title: 'Referral Offer', object: ReferralOffer, path: new_referral_offer_path %>
    <%= render 'optimadmin/shared/search_form' %>
    <%= render 'optimadmin/shared/module/index/pagination' %>
    <%= render 'optimadmin/shared/module/index/recycle_bin', items: @referral_offers.size, path: root_url %>
  </div>

  <div class="row collapse module-list-index header">
    <%= list_item 'small-9' do %>
      <%= link_to octicon('chevron-down'), '#', class: 'helper-link index-list-expand-all', data: { this_class: 'octicon-chevron-up octicon-chevron-down' } %>
      Title
    <% end %>
    <%= list_item { 'Display' } %>

    <%= list_item { 'Edit' } %>

    <%= list_item('large-1 hide-for-medium-down text-center last'){ 'Delete' } %>
  </div>

  <!-- <div class='module-sortable' data-module="ReferralOffer"> -->
  <%= render partial: 'referral_offer', collection: @referral_offers, as: :referral_offer_presenter %>
  <!-- </div> -->
  <%= paginate @referral_offers %>
</div>
