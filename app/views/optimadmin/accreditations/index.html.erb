<%= render 'optimadmin/shared/header/main_title', title: 'Manage Accreditations' %>

<div class="main-content">
  <div class="row module-header collapse">
    <%= render 'optimadmin/shared/module/index/new_item', title: 'Accreditation', object: Accreditation, path: new_accreditation_path %>
    <%= render 'optimadmin/shared/module/index/recycle_bin', items: @accreditations.size, path: root_url %>
  </div>

  <div class="row collapse module-list-index header">
    <%= list_item 'large-1 hide-for-medium-down' do %>
      <%= link_to octicon('settings') %>
    <% end %>
    <%= list_item 'large-6 small-8' do %>
      <%= link_to octicon('chevron-down'), '#', class: 'helper-link index-list-expand-all', data: { this_class: 'octicon-chevron-up octicon-chevron-down' } %>
      Name
    <% end %>
    <%= list_item('large-2 hide-for-medium-down') { 'Logo' } %>
    <%= list_item { 'Display' } %>
    <%= list_item { 'Edit' } %>
    <%= list_item('large-1 hide-for-medium-down text-center last'){ 'Delete' } %>
  </div>

  <div class='module-sortable' data-module="Accreditation">
    <%= render partial: 'accreditation', collection: @accreditations %>
  </div>
</div>
