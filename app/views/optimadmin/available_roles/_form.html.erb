<%= form_for(@available_role) do |f| %>
  <% if @available_role.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@available_role.errors.count, "error") %> prohibited this available_role from being saved:</h2>
      <ul>
        <% @available_role.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="tabs prevent-flash">
    <ul class="tab-list">
      <li><a href="#tabs-1">Content</a></li>
      <li><a href="#tabs-3">Settings</a></li>
      <li>
        <%= link_to '#', class: 'destroy-tabs right', data: { class: 'tabs' } do %>
          <%= octicon('chevron-down') %>
        <% end %>
      </li>
    </ul>
    <%= field_set_tag nil, id: 'tabs-1' do %>
      <div class="field">
        <%= f.label :rates_of_pay %><br>
        <%= f.text_field :rates_of_pay %>
      </div>
      <div class="field">
        <%= f.label :workable_link %><br>
        <%= f.text_field :workable_link %>
      </div>
    <% end %>
    <%= field_set_tag nil, id: 'tabs-3' do %>
      <div class="field">
        <%= f.label :display %><br>
        <%= f.check_box :display %>
      </div>
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit 'Save' %>
    <%= f.submit 'Save and continue editing' %>
  </div>
<% end %>
