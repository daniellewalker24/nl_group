<div class="row">
  <div class="small-12 medium-6 medium-centered columns">
    <div class="branded-content-box form">
      <h1>Reset your password</h1>

      <p class="text-center">Enter your email address to be sent a password reset link.</p>

      <%= form_tag member_area_password_resets_path do %>
        <div class="field">
          <%= label_tag :email %>
          <%= email_field_tag :email, params[:email] %>
        </div>

        <div class="actions">
          <%= submit_tag "Reset Password" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
