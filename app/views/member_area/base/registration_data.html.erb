<h1>Candidate Registration</h1>

<% debug @registration_data %>

<%= render partial: "member_area/basic_informations/basic_information", object: @registration_data.basic_information %>

<%= render partial: "member_area/work_eligibilities/work_eligibility", object: @registration_data.work_eligibility %>

<div class="row">
  <div class="small-12 columns">
    <h2>Address Details</h2>

    <%= render partial: "member_area/member_addresses/member_address", collection: @registration_data.addresses,
               locals: { locked: true } %>
  </div>
</div>

<div class="row">
  <div class="small-12 columns">
    <h2>Qualifications and training</h2>
    <%= render partial: "member_area/member_qualifications/member_qualification", collection: @registration_data.member_qualifications %>

    <%= render partial: "member_area/member_trainings/member_training", collection: @registration_data.member_trainings %>
  </div>
</div>

<div class="row">
  <div class="small-12 columns">
    <h2>Referees and emergency contacts</h2>
    <%= render partial: "member_area/referees/referee", collection: @registration_data.referees, locals: { locked: true } %>

    <%= render partial: "member_area/emergency_contacts/emergency_contact", object: @registration_data.emergency_contact, locals: { locked: true } %>
  </div>
</div>

<div class="row">
  <div class="small-12 columns">
    <%= render "member_area/base/occupational_health_screening" %>
  </div>
</div>

<div class="row">
  <div class="small-12 columns">
    <h2>Disclosure and Barring Service (DBS formerly CRB)</h2>

    <%= render partial: "member_area/dbs_checks/dbs_check", object: @registration_data.dbs_check %>
  </div>
</div>

<div class="row">
  <div class="small-12 columns">
    <%= render partial: "member_area/payment_informations/payment_information", object: @registration_data.payment_information %>
  </div>
</div>

<div class="row">
  <div class="small-12 columns">
    <%= render "member_area/base/declarations" %>
  </div>
</div>
