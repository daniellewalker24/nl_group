<div class="tuberculosis-chicken-pox-check">
  <h4>Tuberculosis</h4>

  <% present tuberculosis_chicken_pox_check do |presenter| %>
    <div class="row">
      <div class="small-12 columns">
        <%= presenter.lived_continuously %>
      </div>
    </div>

    <div class="row">
      <div class="small-6 columns">
        <%= presenter.bcg_vaccination %>
      </div>
      <div class="small-6 columns">
        <strong>Vaccination date:</strong> <%= presenter.vaccination_date %>
      </div>
    </div>

    <% unless presenter.has_lived_continuously? %>
      <h6>Countries you have lived in/visited in the last 5 years</h6>
      <div class="visited-country">
        <div class="row">
          <div class="small-6 columns">
            Country name
          </div>
          <div class="small-2 columns">
            Duration (in months)
          </div>
          <div class="small-2 columns">
            From year
          </div>
          <div class="small-2 columns">
            To year
          </div>
        </div>
      </div>
      <%= render tuberculosis_chicken_pox_check.visited_countries %>
    <% end %>

    Have you had any of the following?

    <div class="row">
      <div class="small-9 columns">
        A cough which has lasted for more than 3 weeks?
      </div>
      <div class="small-3 columns">
        <%= presenter.cough %>
      </div>
    </div>
    <div class="row">
      <div class="small-9 columns">
        Unexplained weight loss?
      </div>
      <div class="small-3 columns">
        <%= presenter.weight_loss %>
      </div>
    </div>
    <div class="row">
      <div class="small-9 columns">
        Unexplained fever?
      </div>
      <div class="small-3 columns">
        <%= presenter.fever %>
      </div>
    </div>
    <div class="row">
      <div class="small-9 columns">
        Have you had tuberculosis (TB) or been in recent contact with open TB?
      </div>
      <div class="small-3 columns">
        <%= presenter.had_tb %>
      </div>
    </div>

    <% if presenter.has_additional_information? %>
      <div class="row">
        <div class="small-12 columns">
          <h6>Additional Information</h6>
          <%= presenter.additional_information %>
        </div>
      </div>
    <% end %>

    <h4>Chicken Pox or Shingles</h4>
    <div class="row">
      <div class="small-9 columns">
        Have you ever had chicken pox or shingles?
      </div>
      <div class="small-3 columns">
        <%= presenter.had_chicken_pox %>
      </div>
    </div>
  <% end %>
</div>