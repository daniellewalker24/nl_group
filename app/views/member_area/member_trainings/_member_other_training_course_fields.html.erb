<div class="nested-fields">
  <%= f.hidden_field :member_training_id %>

  <div class="row">
    <div class="medium-8 columns">
      <div class="field">
        <%= f.label :title %>
        <%= f.text_field :title %>
      </div>
    </div>

    <div class="medium-4 columns">
      <div class="field">
        <%= f.label :training_provider_name %>
        <%= f.text_field :training_provider_name %>
      </div>
    </div>
  </div>
  
  <div class="field">
    <%= f.label :completed_on, class: 'display-block' %>
    <%= f.date_select :completed_on, { order: [:day, :month, :year] }, class: 'date-select' %>
  </div>

  <%= link_to_remove_association "Remove Other Training Course", f, class: 'right' %>
</div>
