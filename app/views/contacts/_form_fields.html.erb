<% if @contact.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize @contact.errors.count, "error" %> prevented your message from sending
    </h2>
    <ul>
      <% @contact.errors.full_messages.each do |msg| %>
        <li>
          <%= msg %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="field">
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>

<div class="field">
  <%= f.label :email %>
  <%= f.email_field :email %>
</div>

<div class="field">
  <%= f.label :phone_number %>
  <%= f.phone_field :phone_number %>
</div>

<div class="field">
  <%= f.label :message %>
  <%= f.text_area :message %>
</div>

<div class="field">
  <%= f.label :enquiry_type %>
  <%= f.select :enquiry_type, ContactEnquiryType.displayed.order(:enquiry_type).pluck(:enquiry_type) %>
</div>

<%= f.hidden_field :location %>

<div class="actions">
  <%= f.submit "Send a message", class: 'right' %>
</div>
