<div class="testimonial-slide-<%= testimonial_presenter.id %> hide">
  <div class="row collapse small-uncollapse">
    <div class="medium-2 columns">
      <div class="testimonial-image">
        <%= link_to (testimonial_presenter.show_image(alt: testimonial_presenter.name, class: 'testimonial-thumbnail')), '#',
                    title: testimonial_presenter.name, class: "css-animated-hover testimonial-video-link-#{testimonial_presenter.id}",
                    data: { class: 'tada' } if testimonial_presenter.video_embed_code.present? %>
      </div>
    </div>

    <div class="medium-10 columns">
      <%= image_tag 'components/content-boxes/testimonial-open-quote.png', alt: '', class: 'testimonial-quote-mark left' %>

      <div class="testimonial-content">
        <%= testimonial_presenter.content %>

        <%= image_tag 'components/content-boxes/testimonial-close-quote.png', alt: '', class: 'testimonial-quote-mark' %>
      </div>


      <div class="testimonial-author">
        <%= testimonial_presenter.name %>, <%= testimonial_presenter.role %>
      </div>

      <%#= link_to "Watch Video", '#', class: "testimonial-watch-video-link testimonial-video-link-#{testimonial_presenter.id}", title: testimonial_presenter.name  %>

      <div class="hide">
        <div id="testimonial-video-<%= testimonial_presenter.id %>" class="testimonial-video-wrap">
          <!--
          <div class="flex-video">
            <%= testimonial_presenter.video_embed_code %>
          </div>
          -->
        </div>
      </div>

      <div class="testimonial-action-button">
        <%= additional_block_presenter.presented_button(0, { }, 'green-action-button colorbox-iframe') if defined?(additional_block_presenter) %>
      </div>
    </div>
  </div>
</div>
