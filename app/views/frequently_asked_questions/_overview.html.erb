<section class="frequently-asked-questions">
  <div class="row">
    <div class="medium-12 columns text-center" data-animation-type="fadeInUp">
      <h4>FAQs</h4>

      <p>We know you will have questions. Here are answers to our most common.</p>
      <p>If in doubt call <strong>0333 123 456</strong> we don't bite.</p>

      <p class="frequently-asked-questions-reveal">
        Click on a question to get the answer.
      </p>
    </div>
  </div>

  <div class="row">
    <div class="medium-6 columns" data-animation-type="fadeInUp" data-animation-delay="500">
      <ul class="frequently-asked-questions-list">
        <%= render partial: 'frequently_asked_questions/frequently_asked_question', collection: @presented_frequently_asked_questions[0..3], as: :frequently_asked_question_presenter %>
      </ul>
    </div>

    <div class="medium-6 columns" data-animation-type="fadeInUp" data-animation-delay="1000">
      <ul class="frequently-asked-questions-list">
        <%= render partial: 'frequently_asked_questions/frequently_asked_question', collection: @presented_frequently_asked_questions[4..6], as: :frequently_asked_question_presenter %>
      </ul>
    </div>
  </div>
</section>
