<div class="small-12 large-6 columns">
  <%= link_to audience_path(audience), class: home_audience_classes(audience), title: audience.title do %>
    <%= content_tag :h2, audience.title, class: 'audience-title' if audience.title.present? %>    

    <%= image_tag home_audience_image(audience),
                  alt: audience.name,
                  title: audience.name,
                  class: 'audience-image' %>

    <%= content_tag :div, (simple_format audience.summary_text), class: 'audience-work-reasons' if audience.summary_text.present? %>
  <% end %>
</div>
