<header class="top-header">
  <div class="row">
    <div class="medium-8 columns">
      <%= link_to root_url, title: global_site_settings['Name'] do %>
        <%= image_tag 'layout/header/logo.png', alt: global_site_settings['Name'] %>
      <% end %>
    </div>

    <div class="medium-4 columns">
      <div class="telephone">
        Tel: <strong><%= global_site_settings['Phone'] %></strong>
      </div>
    </div>
  </div>
</header>

